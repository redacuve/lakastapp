<h2 class="mt-3 text-center"><%= @group.name.upcase %></h2>
<% if @group.icon.url%>
    <%= image_tag @group.icon.url, class: 'img img-fluid', alt: @group.name %>
<% end %>
<br>
<p class="h3 mt-3">Records of this show:</p>
<hr>
<div class="records-container">
    <% @group.records.each do |record| %>
        <span class="d-block"><strong><%= record.name %></strong></span>
        <span class="text-muted d-block">by: @<%= record.author.username %></span>
        <span class="d-block text-muted">Created <%= time_ago_in_words(record.created_at) %> ago</span>
        <hr>
    <% end %>
</div>